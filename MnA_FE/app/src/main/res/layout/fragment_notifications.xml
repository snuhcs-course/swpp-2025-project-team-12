<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SwipeRefreshLayout은 자식 하나만 가질 수 있으므로 스크롤은 NestedScrollView로 감쌉니다 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 제목 (필요 시 표시) -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_indices"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- KOSPI 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardKospi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvKospiName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="KOSPI"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvKospiTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:30"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvKospiValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3435.17"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvKospiChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+2.30 (+0.09%)"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <!-- 간단한 그래프 플레이스홀더 -->
                    <View
                        android:id="@+id/viewKospiChart"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp"
                        android:background="?attr/colorSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- KOSDAQ 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardKosdaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvKosdaqName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="KOSDAQ"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvKosdaqTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:30"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvKosdaqValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="843.50"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvKosdaqChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-3.21 (-0.38%)"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:id="@+id/viewKosdaqChart"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp"
                        android:background="?attr/colorSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>