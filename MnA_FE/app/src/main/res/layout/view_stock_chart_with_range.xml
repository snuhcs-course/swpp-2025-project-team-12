<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardChart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 차트 -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="16dp" />

        <!-- Segmented pill -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnGroupRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedButton="@id/btn6M">

            <!-- 각 버튼은 높이 고정 + 폭 가중치로 균등 분배 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1W"
                style="@style/Widget.DI.SegButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/_1W"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3M"
                style="@style/Widget.DI.SegButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/_3M"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6M"
                style="@style/Widget.DI.SegButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/_6M"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9M"
                style="@style/Widget.DI.SegButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/_9M"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1Y"
                style="@style/Widget.DI.SegButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/_1Y"/>

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
