<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_today"> <!-- 나중에 로그인 화면을 시작 화면으로 바꾸기 -->

    <fragment
        android:id="@+id/navigation_today"
        android:name="com.example.dailyinsight.ui.today.TodayFragment"
        android:label="@string/title_today"
        tools:layout="@layout/fragment_today">
        <action
            android:id="@+id/action_today_to_stock_detail"
            app:destination="@id/stock_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.dailyinsight.ui.history.HistoryFragment"
        android:label="@string/title_market_index"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_history_to_stock_detail"
            app:destination="@id/stock_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/stock_detail_fragment"
        android:name="com.example.dailyinsight.ui.detail.StockDetailFragment"
        android:label="@string/title_stock_detail">
        <argument
            android:name="item"
            app:argType="com.example.dailyinsight.data.dto.RecommendationDto" />
    </fragment>

</navigation>