<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.dailyinsight.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.dailyinsight.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_market_index"
        android:name="com.example.dailyinsight.ui.marketindex.MarketIndexFragment"
        android:label="@string/title_market_index"
        tools:layout="@layout/fragment_market_index" >
        <!-- action: MarketIndex -> StockIndexDetail-->
        <action
            android:id="@+id/action_navigation_market_index_to_stockIndexDetailFragment"
            app:destination="@id/stockIndexDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/stockIndexDetailFragment"
        android:name="com.example.dailyinsight.ui.marketindex.StockIndexDetailFragment"
        android:label="fragment_stock_index_detail"
        tools:layout="@layout/fragment_stock_index_detail">
        <argument
            android:name="stockIndexType"
            app:argType="string" />
    </fragment>
</navigation>