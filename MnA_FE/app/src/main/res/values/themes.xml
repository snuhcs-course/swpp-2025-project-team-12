<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyInsight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <!--This attribute sets the default background color for the entire app window. It's the color you see behind all your layouts and fragments.-->
        <item name="android:windowBackground">@color/white</item>
        <!-- This is a Material Design 3 attribute that defines the color for "surface" components. This includes your AppBarLayout, MaterialCardView, menus, and more. By setting this to white, you ensure these components also have a white background, creating a consistent look. -->
        <item name="colorSurface">@color/white</item>
    </style>
</resources>