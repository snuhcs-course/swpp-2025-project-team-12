<resources> xmlns:tools="http://schemas.android.com/tools">

<!-- [승현님 버전 보존] M3 Light 기반 (원래: Base.Theme.DailyInsight parent=Theme.Material3.Light)
     이름만 충돌 안 나게 바꿔서 보관 -->
<style name="BaseM3.Theme.DailyInsight" parent="Theme.Material3.Light">
    <!-- 필요 시 기존 색 이름으로 매핑 가능 -->
    <!-- <item name="colorPrimary">@color/purple_500</item> -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
</style>

<!-- [찬우님 버전 보존] M2 DayNight 기반 (원래: Theme.DailyInsight parent=Theme.MaterialComponents.DayNight.DarkActionBar)
     이름만 바꿔서 보관 -->
<style name="BaseM2.Theme.DailyInsight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- 기존 프로젝트에서 쓰던 색 이름을 그대로 참조 (값은 colors.xml에 이미 있음) -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>

    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>

    <!-- 상태바 색을 프라이머리 베리언트에 맞춤(기존 코드 호환) -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
</style>

<!-- 앱이 실제로 사용하는 최종 테마: 1번만 정의-->
<!-- 기본 선택: M2 기반(기존 레이아웃 호환이 제일 안전) -->
