<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- [승현님 버전 보존] M3 Light 기반 -->
    <style name="BaseM3.Theme.DailyInsight" parent="Theme.Material3.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <!-- [찬우님 버전 보존] M2 DayNight 기반 -->
    <style name="BaseM2.Theme.DailyInsight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TextAppearance.App.DisplaySmallEmphasis" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 앱이 실제로 사용하는 최종 테마 -->
    <style name="Theme.DailyInsight" parent="BaseM3.Theme.DailyInsight" />
    <!-- M2로 전환하고 싶으면 위 줄을 주석 처리하고 아래 줄의 주석을 해제 -->
