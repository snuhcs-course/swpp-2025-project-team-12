<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon_daily_insight"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_daily_insight_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyInsight">
        <activity
            android:name=".ui.sign.SelectStyle"
            android:exported="false" />
        <activity
            android:name=".ui.sign.SelectInterest"
            android:exported="false" />
        <activity
            android:name=".ui.sign.SignUp"
            android:exported="false" />
        <activity
            android:name=".ui.sign.SignActivity"
            android:exported="false" />
        <activity
            android:name=".ui.start.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>